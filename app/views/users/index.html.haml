%h1{:align => "center"} Best Bloggers
%div{:align => "center"}
  = will_paginate
  - @users.each do |u|
    %ul.listing
      .row
        .well.col-md-4.col-md-offset-4
          %li
            =link_to gravatar_for(u, 150), user_path(u)
          %li.article-title
            =link_to u.username, user_path(u)
          %li
            %small
              =pluralize(u.articles.count, "article") if u.articles
          - if logged_in? && current_user.admin?
            %li
              = link_to "Delete this user", user_path(u), method: :delete,
                  data: { confirm: "Are you sure you want to delete user and their articles?" }
